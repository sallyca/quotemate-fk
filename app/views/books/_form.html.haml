= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        = "prohibited this book from being saved:"

      %ul
        - @book.errors.full_messages.each do |msg|
          %li
            = msg

  .field
    = f.label :title
    = f.text_field :title
  
  .field
    = f.label :author_id
    = f.number_field :author_id

  .field
    = f.label :cover_id
    = f.number_field :cover_id

  .actions
    = f.submit, {:class=>"submit"}