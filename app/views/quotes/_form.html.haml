= form_for(@quote) do |f|
  - if @quote.errors.any?
    #error_explanation
      %h2
        = pluralize(@quote.errors.count, "error")
        = "prohibited this quote from being saved:"

      %ul
      - @quote.errors.full_messages.each do |msg|
        %li
          = msg
  .field
    = f.label "Что пишем"
    %br
    = f.text_field :text, :size => 100
    %br
    =link_to "Может, это из книги?", "#",{:class=>"notice"}
  
  .field-hidden{:style=>"display:none;"}
    = f.label "Книга (название, например)"
    %br
    = f.number_field :book_id

  .actions
    = f.submit "В молескин"
