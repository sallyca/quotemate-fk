%h1
  ="Записано"
  -if @tag.present?
    ="##{@tag.keyword}"

%table
  - @quotes.each do |quote|
    %tr
      %td.quote
        = quote.text
    -unless params[:tag].present?
      %tr
        %td.tags
          - quote.tags.each do |tag|
            =link_to "##{tag.keyword}", quotes_path(:tag => tag.id)
%br
  = link_to 'Записать ещё', new_quote_path, {:class => "submit"}