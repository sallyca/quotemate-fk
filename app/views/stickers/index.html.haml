- @stickers.each do |sticker|
  %tr
    %td
      = sticker.quote_id
    %td
      = sticker.color
    %td
      = sticker.font
    %td
      = sticker.font_size
    %td
      = link_to 'Show', sticker
    %td
      = link_to 'Edit', edit_sticker_path(sticker)
    %td
      = link_to 'Destroy', sticker, confirm: 'Are you sure?', method: :delete

